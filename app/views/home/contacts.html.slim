.l-centered.left.section-container
  = render 'shared/header'
  .row.content-section.typo-main.typo-dealer
    .col-xs-8.col-xs-offset-1
      h1.cont-head *{name: (@contacts_page.name if @contacts_page.chapters.present?)}.merge(editable_in_place_data(@contacts_page, :name))
        = @contacts_page.name
      - if can? :edit, @contacts_page
        p
          = link_to 'Редактировать', edit_admin_content_page_path(@contacts_page)
      div *editable_in_place_data(@contacts_page, :content, :textarea)
        = @contacts_page.content.html_safe
    .delimeter
  - @contacts_page.chapters.each do |chapter|
    .row.content-section.typo-main
      .col-xs-8.col-xs-offset-1
        h1.cont-head *{id: chapter.anchor}
          = chapter.name
        = chapter.content.html_safe
